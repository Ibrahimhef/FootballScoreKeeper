<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/first_team_side"
            android:layout_alignParentLeft="true"
            android:layout_above="@id/rest_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/score_first_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/intail"
                android:textSize="76sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/score_first_team"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yelloy_cards_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:text="@string/intail"
                    android:textColor="@color/yellow"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/red_cards_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:text="@string/intail"
                    android:textColor="@color/red"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/goal_team1"
                android:layout_centerHorizontal="true"
                android:paddingTop="14dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goal"
                android:textAllCaps="true"
                android:paddingBottom="16dp"
                android:background="@color/green"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:onClick="firstTeamGoal"
                />
            <Button
                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/goal_team1"
                android:paddingBottom="16dp"
                android:background="@color/yellow"
                android:onClick="yellowCardFirstTeam"
                />
            <Button
                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/goal_team1"
                android:background="@color/red"
                android:onClick="redCardFirstTeam"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/scound_team_side"
            android:layout_above="@id/rest_bottom"
            android:layout_width="wrap_content"
            android:paddingTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/score_secound_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="@string/intail"
                android:textSize="76sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/score_secound_team"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/red_cards_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:text="@string/intail"
                    android:textColor="@color/red"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/yelloy_cards_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:text="@string/intail"
                    android:textColor="@color/yellow"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
        <Button
            android:id="@+id/goal_team2"
            android:paddingTop="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal"
            android:textAllCaps="true"
            android:paddingBottom="14dp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:onClick="scoundTeamGoal"
            />
            <Button
                android:layout_width="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/goal_team2"
                android:background="@color/red"
                android:onClick="redCardSecoundTeam"
                />
            <Button
                android:layout_width="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/goal_team2"
                android:background="@color/yellow"
                android:onClick="yellowCardSecoundTeam"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/rest_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/rest"
            android:textAllCaps="true"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:onClick="rest"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>